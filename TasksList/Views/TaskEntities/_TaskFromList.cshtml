@model TasksList.Models.TaskEntity

<div class="well">
    <div class="row">
        <div class="col-md-9">
            <h3>
                <strong>@Model.Date</strong>
                <strong>@Model.Header</strong>
            </h3>
        </div>
        <div class="col-md-3" align="right">
            <h3>
                @if (Model.IsDone == true)
                {
                    <strong>DONE</strong>
                }

                <a href="@Url.Action("Edit", new { id=Model.Id })" class="myProvider btn btn-info">
                    <i class="glyphicon glyphicon-pencil"></i> Edit
                </a>

                <a href="@Url.Action("Delete", new { id=Model.Id })" class="myProvider btn btn-danger">
                    <i class="glyphicon glyphicon-trash"></i> Delete
                </a>
            </h3>
        </div>
    </div>

    <span class="lead">@Model.Text</span>
</div>
